<!DOCTYPE html>
<html lang="en">
{{ template "head" "Yuanyuan Zhou" }}
    <body>
        {{template "navbar" .Login }}
        <img src="/fs/{{.LargeCoverPath}}"
     onerror="this.onerror=null;this.src='/fs/{{.OriginalCoverPath}}';"
     alt="Cover image">
        
        {{if .Login}}
        <div class="upload-section">
            <h2>Upload New Cover</h2>
            <form id="uploadForm" action="/" method="POST" enctype="multipart/form-data">
                <div>
                    <label>Select Cover Image:</label>
                    <input 
                        type="file" 
                        id="photos"  
                        name="cover" 
                        accept="image/*,.heic,.heif" 
                        required
                    >
                    <div id="fileInfo">
                        <span id="fileCount">0 files selected</span>
                        <span id="totalSize">0 MB</span>
                    </div>
                    <div id="preview" style="display: flex; gap: 10px; margin-top: 10px;"></div>
                    <div id="uploadProgress" style="display: none;">
                        <progress value="0" max="100"></progress>
                        <span id="progressText">0%</span>
                    </div>
                    <div id="errorMessage" style="color: red;"></div>
                    <small>Max 10MB</small>
                </div>
                <div>
                    <button type="submit" id="submitBtn">Upload</button>
                </div>
            </form>
        </div>
        {{ template "browser-image-compression-script" }}
        {{end}}
    </body>
</html>
